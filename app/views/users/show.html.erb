<header class="intro-header" style="background-image: url('/assets/post-bg.jpg')">
  <div class="container">
      <div class="row">
          <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
              <div class="page-heading">
                  <h1>User</h1>
                  <hr class="small">
                  <span class="subheading">Showing User</span>
              </div>
          </div>
      </div>
  </div>
</header>


<!-- Main Content -->
